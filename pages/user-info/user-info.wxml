


<form bindsubmit="change">
<view class="root">
  <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
  <image class="avatar" src="{{user.avatarUrl}}" name="avatarUrl"></image>
</button> 
  <view class="item">
    <text>手机：</text>
    <input placeholder="请输入您的手机号" name="phone"></input>
  </view>
  <view class="item">
    <text>密码：</text>
    <input placeholder="请输入您的密码" name="password"></input>
  </view>
  <view class="item">
    <text>昵称：</text>
    <input placeholder="请输入您的昵称" name="nickName"></input>
  </view>
  <view class="item">
    <text>姓名：</text>
    <input placeholder="请输入您的姓名" name="trueName"></input>
  </view>
  <view class="item">
    <text>性别：</text>
    <picker bindchange="bindPickerChange" name="sex" value="{{idx}}" range="{{sex}}">
    <view class="picker" >
      {{sex[idx]}}
    </view>
  </picker>
  </view>
  <view class="item">
  <view >报考日期:</view>
  <picker mode="date"  name="date" value="{{date}}" start="2023-05-01" end="2030-09-01" bindchange="bindDateChange">
    <view class="picker">
      {{date}}
    </view>
  </picker>
</view>
  <view class="item">
    <text>报考学校：</text>
    <input placeholder="请输入您的报考学校" name="school"></input>
  </view><view class="item">
    <text>报考专业：</text>
    <input placeholder="请输入您的报考专业" name="major"></input>
  </view>

  <button class="btn" form-type="submit">确认更改</button>

</view>
</form>