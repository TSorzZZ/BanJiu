
<form bindsubmit="register">
<view class="root">
  <view class="item">
    <text>手机：</text>
    <input placeholder="请输入您的手机号" name="phone"></input>
  </view>
  <view class="item">
    <text>密码：</text>
    <input placeholder="请输入您的密码" name="password"></input>
  </view>
  <view class="item">
    <text>昵称：</text>
    <input placeholder="请输入您的昵称" name="nickName"></input>
  </view>
  <button class="btn" form-type="submit">注册</button>

</view>
</form>