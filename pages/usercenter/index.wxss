page {
  background-color: khaki;
}

.top_root{
  margin-top: 330rpx;
  align-items: center;
}

.top_name{
  font-size: 48rpx;
  text-align: center;
}

.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-left: 280rpx;
}

.item{
  background: white;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom:  2rpx solid gainsboro;
}

.item_name{
  font-size: 36rpx;
  margin-left: 20rpx;
  text-align: center;
}

.space {
  margin-top:30px;
}




.button {
  width: 100%;
  background: white;
  border: none;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 0;
}